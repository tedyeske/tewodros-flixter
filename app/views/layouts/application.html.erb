<!DOCTYPE html>
<html>
  <head>
    <title>Flixter</title>
    <%= csrf_meta_tags %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <link href="http://vjs.zencdn.net/5.12.6/video-js.css" rel="stylesheet">
  </head>
  <body>
    <div id="flex-content-container">

      <nav class="navbar navbar-toggleable-md navbar-inverse bg-inverse" >
        
        <%= link_to 'Flixter', root_path, class: 'navbar-brand' %>
        <ul class="navbar-nav mr-auto mt-2 mt-md-0">
          <li class="nav-item">
            <%= link_to 'See All Courses', courses_path, class: 'nav-link' %>
          </li>
        </ul>        

        <ul class="navbar-nav">
          <% if user_signed_in? %>

            <li class="nav-item">
              <%= link_to 'My Dashboard', dashboard_path, class: 'nav-link' %>
            </li>
   
            <li class="nav-item">
              <%= link_to 'Sign out', destroy_user_session_path, method: :delete, class: 'nav-link' %>
            </li>     
          <% else %>
            <li class="nav-item">
              <%= link_to 'Sign in', new_user_session_path, class: 'nav-link' %>
            </li>
            <li class="nav-item">
              <%= link_to 'Sign up!', new_user_registration_path, class: 'nav-link' %>
            </li>
          <% end %>
        </ul>
        
      </nav>

      <% if notice.present? %>
        <p class="alert alert-info"><%= notice %></p>
      <% end %>

      <% if alert.present? %>
        <p class="alert alert-danger"><%= alert %></p>
      <% end %>

      <%= yield %>
    </div>

    <div id="footer">
      <div class="row feature text-center">
        <div class="col-12 col-sm">
          <b>Teachers</b>
          <br />
          <%= link_to 'Teach a Course', new_instructor_course_path %>
          <br />
          <%= link_to 'My Dashboard', dashboard_path %>
  
          <br />
        </div>

        <div class="col-12 col-sm">

          <b>About</b>
          <br />
          <%= link_to 'Team', '#' %>
          <br />
          <%= link_to 'Careers', '#' %>
          <br />
          
          <%= link_to 'Privacy Policy', privacy_path %>
        </div>
          
        
        <div class="col-12 col-sm">
          <b>Contact</b>
          <br />
          tewodros.wakshum@example.com
          300 Pasture Dr
          PaloAlto, CA, 94304
        
        </div>

        <div class="col-12 col-sm">
          <b>Social</b>
          <br />
          <%= link_to "Github", "https://github.com/tedyeske" %><br />
          <%= link_to  "https://www.linkedin.com/in/tewodros-wakshum/" do %>
          <span class="fa fa-github-square fa-2x social-button"></span>
          <span class="fa fa-twitter-square fa-2x"></span>

          <% end %>
                      
        </div>
      </div>
     
 
      </div>
    </div>
    
    <script src="http://vjs.zencdn.net/5.12.6/video.js"></script>
    <script src="http://vjs.zencdn.net/ie8/1.1.2/videojs-ie8.min.js"></script>
 
  </body>
</html>
